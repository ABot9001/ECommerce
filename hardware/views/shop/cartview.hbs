{{#if products}}

<div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <ul class="list-group">
            <li class = "list-group-item">
                {{#each products}}
                <img src="{{this.item.productImagePath}}" width="20%" height="15%">
                <span class = "badge">{{this.quantity}}</span>
                <strong> {{this.item.productName}} </strong>
                <span class="label label-success"> $ {{this.item.productPrice}} </span>
                <div class="btn-gropu">
                    <button class = "btn-primary btn-xn dropdown-toggle" type = "button">Action <span class="caret"></span> </button>
                    <ul class = "dropdown-menu">
                        <li><a href="#"> Delete 1 item </a></li>
                        <li><a href="#"> Delete all items </a></li>
                    </ul>
                </div>
                 <hr>
                {{/each}}
            </li>
            
        </ul>
       
    </div>
</div>
<hr>
<div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <strong> Total Price: $ {{totalPrice}}</strong>
        <br>
        <a href="/checkoutcart" class = "btn-success btn" type="button">Checkout</a>
    </div>
</div>

{{else}}

<div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <h2> No items in cart</h2>
    </div>
</div>

{{/if}}
